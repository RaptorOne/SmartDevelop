<SyntaxDefinition name="AHK"
        xmlns="http://icsharpcode.net/sharpdevelop/syntaxdefinition/2008">
  <Color name="Comment" foreground="Green" />
  <Color name="String" foreground="DarkRed" />

  <!-- This is the main ruleset. -->
  <RuleSet ignoreCase="true">
    <Span color="Comment" begin=";" />
    <Span color="Comment" multiline="true" begin="/\*" end="\*/" />

    <Span color="String">
      <Begin>"</Begin>
      <End>"</End>
      <RuleSet>
        <!-- nested span for escape sequences -->
        <Span begin="\\" end="." />
      </RuleSet>
    </Span>

    <Keywords fontWeight="bold" foreground="Blue">
      <Word>if</Word>
      <Word>else</Word>
      <Word>return</Word>
      <Word>global</Word>
      <Word>static</Word>

      <Word>true</Word>
      <Word>false</Word>
      
      <Word>loop</Word>
      <Word>while</Word>
      
      <!-- ... -->
    </Keywords>

    <Keywords fontWeight="bold" foreground="Violet">
      <Word>A_Space</Word>
      <Word>A_Tab</Word>

      <Word>A_WorkingDir</Word>
      <Word>A_ScriptDir</Word>
      <Word>A_ScriptName</Word>
      <Word>A_ScriptFullPath</Word>
      <Word>A_LineNumber</Word>
      <Word>A_LineFile</Word>
      <Word>A_ThisFunc</Word>

      <Word>A_ThisLabel</Word>

      <Word>A_AhkVersion</Word>
      <Word>A_AhkPath</Word>
      <Word>A_IsUnicode</Word>
