      <Word>A_MMM</Word>
      <Word>A_DDDD</Word>
      <Word>A_DDD</Word>
      <Word>A_WDay</Word>
      <Word>A_YDay</Word>
      <Word>A_YWeek</Word>
      <Word>A_Hour</Word>
      <Word>A_Min</Word>
      <Word>A_Sec</Word>
      <Word>A_MSec</Word>
      <Word>A_Now</Word>
      <Word>A_NowUTC</Word>
      <Word>A_TickCount</Word>
      <!-- Script Settings -->
      <Word>A_IsSuspended</Word>
      <Word>A_IsPaused</Word>
      <Word>A_IsCritical</Word>
      <Word>A_BatchLines</Word>
      <Word>A_TitleMatchMode</Word>
